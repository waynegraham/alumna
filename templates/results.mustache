{{> header }}

{{#count}}
<h3>Your query returned {{count}} records<br />
    Choose a record to view</h3>
<form method="GET" action="results">
    <table cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th>#</th>
                {{#labels}} <th>{{label}}</th> {{/labels}}
            </tr>
        </thead>
        <tbody>
            {{#results}} {{> searchresult }} {{/results}}
        </tbody>
        <tfoot>
            <tr>
                <td colspan='15'>
                    {{#prev}}
                    <a href="?prev_page=1&{{query_params}}">View previous {{page_size}} summaries</a>
                    {{/prev}}
                    {{#next}}
                    <a href="?next_page=1&{{query_params}}">View next {{page_size}} summaries</a>
                    {{/next}}
                    {{#paging}}
                    <br />OR</br />
                    {{/paging}}
                    <a href="search">Input new search criteria</a>
                </td>
            </tr>
        </tfoot>
    </table>
</form>
{{/count}}
{{^count}}
<h3>Your query returned 0 results.</h3>
{{/count}}

{{> footer }}
